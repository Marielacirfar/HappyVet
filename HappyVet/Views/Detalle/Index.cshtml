@model IEnumerable<HappyVet.Models.Detalle>

@{
    ViewData["Title"] = "Index";
}

<h1>Detalle</h1>

<p>
    <div class="row">
        <div class="col-sm">
            <a asp-action="Create" class="btn btn-outline-secondary">Nuevo Detalle</a>
            &nbsp;&nbsp;
        </div>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PorcentajeDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacuna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListaPrecio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TarifaPrecio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PorcentajeDescuento) %
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacuna.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListaPrecio.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarifaPrecio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
